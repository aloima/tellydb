{
  "version": 10,
  "configurePresets": [
    {
      "name": "default",
      "generator": "Unix Makefiles"
    },
    {
      "name": "release",
      "inherits": "default",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "tsan",
      "inherits": "default",
      "binaryDir": "${sourceDir}/build/tsan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_FLAGS": "$env{CMAKE_C_FLAGS} -fsanitize=thread -fPIE",
        "CMAKE_EXE_LINKER_FLAGS": "$env{CMAKE_EXE_LINKER_FLAGS} -fsanitize=thread -pie"
      }
    },
    {
      "name": "debug",
      "inherits": "default",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "relwithdeb",
      "inherits": "default",
      "binaryDir": "${sourceDir}/build/relwithdeb",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "tsan",
      "configurePreset": "tsan"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "relwithdeb",
      "configurePreset": "relwithdeb"
    }
  ]
}
